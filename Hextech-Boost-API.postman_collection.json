        {
          "name": "Register Client",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newclient@test.com\",\n  \"password\": \"password123\",\n  \"username\": \"newclient\",\n  \"role\": \"client\"\n}"
